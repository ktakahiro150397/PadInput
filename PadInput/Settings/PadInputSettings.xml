<?xml version="1.0" encoding="utf-8" ?>

<PadInputSettings>

	<ButtonOverlaySettings>

		<!--ベースイメージ。-->
		<BaseOverlayImage>.\Settings\Pic\Base.png</BaseOverlayImage>

		<!--表示する各ボタンのイメージとベースイメージに対する座標。-->
		<ButtonOverlayImages>

			<OverlayImage button="PAD_BUTTON_0">
				<ImageName>Settings\Pic\D_Press.png</ImageName>
				<OverlayImagePosition>
					<x>0</x>
					<y>0</y>
				</OverlayImagePosition>
			</OverlayImage>

			<OverlayImage button="PAD_BUTTON_1">
				<ImageName>Settings\Pic\A_Press.png</ImageName>
				<OverlayImagePosition>
					<x>32</x>
					<y>32</y>
				</OverlayImagePosition>
			</OverlayImage>

			<OverlayImage button="PAD_BUTTON_2">
				<ImageName>Settings\Pic\B_Press.png</ImageName>
				<OverlayImagePosition>
					<x>64</x>
					<y>64</y>
				</OverlayImagePosition>
			</OverlayImage>

			<OverlayImage button="PAD_BUTTON_3">
				<ImageName>Settings\Pic\C_Press.png</ImageName>
				<OverlayImagePosition>
					<x>96</x>
					<y>96</y>
				</OverlayImagePosition>
			</OverlayImage>

		</ButtonOverlayImages>

	</ButtonOverlaySettings>

	<!--方向キー入力時に表示するイメージ。-->
	<POVDirectionImages>
		<POVDirectionImage direction="Neutral">Settings\Pic\Direction_N.png</POVDirectionImage>
		<POVDirectionImage direction="Up">Settings\Pic\Direction_Up.png</POVDirectionImage>
		<POVDirectionImage direction="Down">Settings\Pic\Direction_Down.png</POVDirectionImage>
		<POVDirectionImage direction="Left">Settings\Pic\Direction_Left.png</POVDirectionImage>
		<POVDirectionImage direction="Right">Settings\Pic\Direction_Right.png</POVDirectionImage>
		<POVDirectionImage direction="UpRight">Settings\Pic\Direction_UpRight.png</POVDirectionImage>
		<POVDirectionImage direction="UpLeft">Settings\Pic\Direction_UpLeft.png</POVDirectionImage>
		<POVDirectionImage direction="DownRight">Settings\Pic\Direction_DownRight.png</POVDirectionImage>
		<POVDirectionImage direction="DownLeft">Settings\Pic\Direction_DownLeft.png</POVDirectionImage>
	</POVDirectionImages>

</PadInputSettings>
